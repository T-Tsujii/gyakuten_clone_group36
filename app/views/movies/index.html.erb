<div class="base-container mw-xl">
  <div class="container-fluid">
    <div class="contents-title text-center">
    <h1>Rails 動画教材</h1>
    </div>

    <div class="row">
      <% @movies.each do |movie| %>
        <%= link_to "Rails 動画教材", edit_movie_path(movie) %>
         <div class="col-12 col-md-6 col-lg-4">
          <div class="card border-dark mb-3">
            <a target="_blank" href="/texts/<%= movie.id %>">
              <div class="card-header p-0">
                <iframe width="560" height="315" alt="<%= movie.title %>" src="https://www.youtube.com/embed/iFMNUM2Q9mg" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
              </div>
              <div class="card-body text-dark movie-body">
                <p id="watched-movie-1133">
                  <a class="btn btn-secondary btn-block" data-remote="true" rel="nofollow" data-method="post" href="/movies/1133/watched_movies">視聴済みにする</a>
                </p>
                <p class="card-text movie-title">
                  <%= movie.title %>
                </p>
                <p>【<%= movie.genre %>】</p>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>